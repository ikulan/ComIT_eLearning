@model IEnumerable<ComIT_eLearning.Models.Course>

@{
    ViewData["Title"] = "Course List";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Course List</h1>
    <div>
        <a asp-action="Create" class="btn btn-secondary me-2">Create New</a>
        <a asp-action="Create" class="btn btn-secondary">Upload CSV</a>
    </div>
</div>
<hr>

<!-- Filter Form -->
<div class="d-flex mb-2 justify-content-between align-items-end">
    <form asp-action="ChangeStatus" method="post" class="col-12">
        <div class="d-flex gap-2 align-items-center">
            <div class="input-icon flex-grow-1">
                <input id="searchInput" type="text" class="form-control" placeholder="Search courses by name or number">
                <span class="input-icon-addon">
                    <i class="fa fa-search search-icon"></i>
                </span>
            </div>
            <div class="form-group d-flex align-items-center">
                <label class="mb-0 me-2">
                    <p class="mb-0 text-center">Status:</p>
                </label>
                <select name="Status" class="form-control form-select flex-shrink-0" style="width: 150px;">
                    @foreach (var status in Html.GetEnumSelectList<ComIT_eLearning.Models.Enums.CourseStatus>())
                    {
                        <option value="@status.Value">@status.Text</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-secondary">
                Filter
            </button>
        </div>
    </form>
</div>

<!-- Course List -->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year) @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
