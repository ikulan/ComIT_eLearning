@model ProfileViewModel

<div class="container">
  <div class="d-flex justify-content-between align-items-end">
    <h2>@Model.User.GetFullName()</h2>
  </div>
  <hr />

  @if (Model.studentProfile != null)
  {
    var profile = Model.studentProfile;

    <!-- #region Basic Info Card-->
    <div class="card">
      <div class="card-header">
        <div class="card-head-row card-tools-still-right">
          <h3 class="card-title">Basic Info</h3>
        </div>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-2">
            <p class="card-text">Department</p>
          </dt>
          <dd class="col-sm-10">
            <p class="card-text">@profile.Department</p>
          </dd>
          <dt class="col-sm-2">
            <p class="card-text">Student Number</p>
          </dt>
          <dd class="col-sm-10">
            <p class="card-text">@profile.StudentNumber</p>
          </dd>
          <dt class="col-sm-2">
            <p class="card-text">Email</p>
          </dt>
          <dd class="col-sm-10">
            <p class="card-text">@Model.User.Email)</p>
          </dd>
          <dt class="col-sm-2">
            <p class="card-text">Phone Number)</p>
          </dt>
          <dd class="col-sm-10">
            <p class="card-text">@Model.User.PhoneNumber)</p>
          </dd>
        </dl>
      </div>
    </div>
    <!-- #endregion Basic Info Card-->
  }
</div>