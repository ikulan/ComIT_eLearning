@{
  var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

  // for Razor Pages like /Account/Login
  var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}


<nav class="navbar navbar-expand-lg bg-secondary">
  <div class="container">
    <!-- Brand  -->
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-Learning</a>

    <!-- Nav list  -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">

        @if (currentAction == "Index")
        {
          <li class="nav-item active">
            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
              Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
        }
        else
        {
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
          </li>
        }
        </li>
        <li class="nav-item">
          @if (currentAction == "About")
          {
          <li class="nav-item active">
            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="About">
              About
              <span class="sr-only">(current)</span>
            </a>
          </li>
        }
        else
        {
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
          </li>
        }
        </li>

        @if (currentPage == "/Account/Login")
        {
          <li class="nav-item active">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
              Log In
              <span class="sr-only">(current)</span>
            </a>
          </li>
        }
        else
        {
          <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Log In</a>
          </li>
        }
      </ul>
    </div>

    <!-- Nav list toggler button on smaller views  -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>